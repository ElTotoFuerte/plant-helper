<div class="container show-plant">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <h1><%= @plant.name %></h1>
      <%= cl_image_tag @plant.photos.first.key, height: 200, width: 200, crop: :fill %>
      <div>
        <p><%= @plant.description %></p>
      </div>
      <%= simple_form_for @user_plant do |f| %>
            <%= f.input :nickname, input_html: { value: @plant.name } %>
            <%= f.input :plant_age,  collection: UserPlant.plant_ages.keys %>
            <%= f.input :plant_health, collection: UserPlant.plant_healths.keys %>
            <%= hidden_field_tag 'plant_id', @plant.id %>
            <%= f.submit %>
      <% end %>
      <br>
      <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal" aria-label="Close"><%= link_to "Back", "/my_plants" %></button>
    </div>
  </div>
</div>
