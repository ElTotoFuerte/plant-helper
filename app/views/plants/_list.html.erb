<div class="row" style="position:relative">
  <% @plants.each do |plant| %>
    <div class="col-4" data-controller='extended-card'>
      <div class="tester" data-action='click->extended-card#revealCard'>
        <li style ="background-image: url(<%= cl_image_path plant.photos.first.key %>)" data-extended-card-target='card'>
          <p class="card-text"><%= plant.name %></p>
        </li>
      </div>
      <div class="d-none" data-extended-card-target='extendCard'>
        <%= cl_image_tag plant.photos.first.key %>
        <div class="extended-card-form">
          <p class="card-text"><%= plant.name %></p>
          <p><%= plant.description %></p>

          <div class="d-flex justify-content-around state-plant">
            <div class="state">
              <img src="https://res.cloudinary.com/dcgubphgl/image/upload/v1646762407/plant%20sample/sun_skgxgi.png" alt="light">
              <p><%= plant.light %></p>
            </div>

            <div class="state">
              <img src="https://res.cloudinary.com/dcgubphgl/image/upload/v1646762407/plant%20sample/water_o4tb7s.png" alt="humidity">
              <p><%= plant.humidity %></p>
            </div>

            <div class="state">
              <img src="https://res.cloudinary.com/dcgubphgl/image/upload/v1646762407/plant%20sample/high-temperature_q7ylfs.png" alt="temperature">
              <p><%= plant.temperature %></p>
            </div>
          </div>

          <%= simple_form_for @user_plant, namespace: "#{plant.id}" do |f| %>
            <%= f.input :nickname, input_html: { value: plant.name } %>
            <%= f.input :plant_age,  collection: UserPlant.plant_ages.keys, as: :radio_buttons %>
            <%= f.input :plant_health, collection: UserPlant.plant_healths.keys, as: :radio_buttons %>
            <%= hidden_field_tag 'plant_id', plant.id %>
          <% end %>
          <button type="button" class="btn btn-secondary standard-button card-close-button" data-action='click->extended-card#hideCard'>Close</button>
        </div>
        <br>
      </div>
    </div>
  <% end %>
</div>
