<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Add a plant!
</button>
<% if current_user.user_plants.empty? %>
  <p>No plant for now</p>
<% else %>
  <% @user_plants.each do |user_plant| %>
    <%= cl_image_tag user_plant.plant.photos.first.key, height: 200, width: 200, crop: :fill %>
    <%= user_plant.nickname %>
  <% end %>
<% end %>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Choose your plant!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" data-controller="plant-card">

        <form novalidate="novalidate" data-plant-card-target="form" class="simple_form search" action="<%= plants_path %>" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" data-action="keyup->plant-card#search" data-plant-card-target="searchBar" />
          </div>
        </form>

        <div class="container">
          <div class="row justify-content-center">
            <ul class="plants-list" data-plant-card-target="content">
              <%= render "plants/list", locals: { plants: @plants } %>
            </ul>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>
