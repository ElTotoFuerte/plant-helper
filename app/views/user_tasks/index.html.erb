<div class="container h1-container">
  <h1>Dashboard</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <h2>Today's tasks</h2>
    <% @user_tasks.each do |user_task| %>
      <% @current_user_plant = UserPlant.where(id: user_task.user_plant_id) %>
      <div class="card mb-3" style="max-width: 740px;">
        <div class="row g-0">
          <div class="col-md-4">
            <%= cl_image_tag @current_user_plant.first.plant.photos.first.key, height: 200, width: 200, crop: :fill %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= @current_user_plant.first.nickname %></h5>
              <p class="card-text"><%= user_task.task.description %></p>
              <p class="card-text"><small class="text-muted"><%= user_task.frequency %> times a week</small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<h2>Future tasks</h2>
